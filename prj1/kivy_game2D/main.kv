#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "img/sky.png"
            Rectangle:
                size: self.width, 138 # pixels
                pos: self.pos[0], self.pos[1] + self.height - 138
                texture: self.cloud_texture

            Rectangle:
                size: self.width, 96 # pixels of the image
                pos: self.pos[0], self.pos[1]
                texture: self.floor_texture
    Label:
        id: score
        size_hint_y: None
        height: 96
        text: "0"
        font_size: 40
    
    Button:
        id: start_button
        text: "Start game"
        font_size: 40
        background_normal: "img/transparent.png"
        background_down: "img/transparent.png"
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()

    Bird:
        id: bird
        source: "img/bird1.png"
        size_hint: None, None
        size: 46, 34
        pos: 20, (root.height - 96) / 2.0

