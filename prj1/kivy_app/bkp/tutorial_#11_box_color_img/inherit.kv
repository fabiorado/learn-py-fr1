<Button>
    font_size: 32
    pos_hint: {'center_x': 0.5}
    size_hint: (.4, .4)

<Label>
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            # to change backgrond color of the lables
            background_color: (0, 0, 1, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # other things
            color: (0,1,1,1)
            bold: True
            italic: True
            outline_color: (0,0,0)
            outline_width: 10

        TextInput:
            multiline: False
        
        Label:
            text: "Pizza"
        TextInput:
            multiline: False

        Image:
            source: '../../data/mochi.png'
            allow_stretch: True
            keep_ratio: True


        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Submit"
            Button:
                text: "Clear"
